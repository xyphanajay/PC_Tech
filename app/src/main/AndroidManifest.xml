<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.xypha.pc">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".splash"
            android:screenOrientation="portrait"
            android:theme="@android:style/Theme.Black.NoTitleBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Projects"
            android:label="@string/title_activity_projects"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Project"
            android:label="@string/title_activity_project"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".Robo"
            android:label="@string/title_activity_robo"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.xypha.pc.MainActivity" />
        </activity>
        <activity
            android:name=".Print"
            android:label="@string/title_activity_print"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Autom"
            android:label="@string/title_activity_autom"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Works"
            android:label="@string/title_activity_works"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".About"
            android:label="@string/title_activity_about"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Train"
            android:label="@string/title_activity_train"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Intern"
            android:label="@string/title_activity_intern"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Calc"
            android:label="@string/title_activity_calc"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Service"
            android:label="@string/title_activity_service"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>