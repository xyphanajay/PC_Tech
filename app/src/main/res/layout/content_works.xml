<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_height="match_parent"
	android:layout_width="match_parent">
	<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
		android:layout_height="match_parent"
		android:layout_width="match_parent"
		android:layout_marginTop="40dp">
		<ImageView
			android:layout_height="140dp"
			android:layout_width="match_parent"
			android:src="@drawable/a"
			android:scaleType="centerCrop"
			android:id="@+id/basic"/>
		<Button
			android:layout_width="match_parent"
			android:layout_height="40dp"
			android:textSize="18dp"
			android:layout_marginBottom="20dp"
			android:text="3D Printing"
			android:layout_below="@id/basic"
			android:layout_centerHorizontal="true"
			android:id="@+id/b1"/>
		<ImageView
			android:layout_height="140dp"
			android:layout_width="match_parent"
			android:src="@drawable/plotter"
			android:scaleType="centerCrop"
			android:id="@+id/quad"
			android:layout_below="@id/b1"/>
		<Button
			android:textSize="18dp"
			android:layout_width="match_parent"
			android:layout_height="40dp"
			android:text="CNC Routing/Plotter"
			android:layout_marginBottom="20dp"
			android:layout_centerHorizontal="true"
			android:id="@+id/b2"
			android:layout_below="@id/quad"/>

		<ImageView
			android:layout_height="140dp"
			android:layout_width="match_parent"
			android:scaleType="fitCenter"
			android:src="@drawable/pedal"
			android:id="@+id/pedal"
			android:layout_below="@id/b2"/>
		<Button
			android:layout_width="match_parent"
			android:layout_height="40dp"
			android:textSize="18dp"
			android:layout_marginBottom="20dp"
			android:text="Bi-Pedal Robotics"
			android:layout_below="@id/pedal"
			android:layout_centerHorizontal="true"
			android:id="@+id/b3"/>
	</RelativeLayout>
</ScrollView>
