<?xml version="1.0" encoding="utf-8"?>

<ScrollView  xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="20dp"
        android:paddingTop="40dp">

        <TextView
            android:text="COST ANALYSIS"
            android:textSize="30sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ca"
            android:textColor="#000"
            android:textStyle="bold"
            android:layout_centerHorizontal="true"
            android:layout_alignParentTop="true" />

        <TextView
            android:text="Type of Filament"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:id="@+id/type"
            android:layout_marginLeft="10dp"
            android:textColor="#000"
            android:layout_below="@id/ca"
            android:textSize="20sp"/>
        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/radioGroup2"
            android:layout_below="@id/ca"
            android:orientation="horizontal"
            android:layout_toRightOf="@id/type"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp">
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/radioButton"
                android:textSize="16dp"
                android:textStyle="bold"
                android:textColor="#000"
                android:text=" A.B.S."/>

            <RadioButton
                android:text=" P.L.A."
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/radioButton2"
                android:textSize="16dp"
                android:textStyle="bold"
                android:textColor="#000"
                android:layout_alignTop="@+id/radioGroup2"
                android:layout_alignEnd="@+id/radioGroup2" />

        </RadioGroup>

        <TextView
            android:text="Size of Filament will be 1.75mm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000"
            android:layout_marginTop="20dp"
            android:textSize="14dp"
            android:id="@+id/textView2"
            android:layout_below="@+id/radioGroup2"
            android:layout_centerHorizontal="true"/>
        <TextView
            android:text=" Rs.1600/kg"
            android:textColor="#000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textView2"
            android:textSize="18dp"
            android:layout_marginTop="20dp"
            android:layout_toRightOf="@id/textView3"
            android:id="@+id/textView4" />
        <TextView
            android:text="Filament Cost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView2"
            android:textColor="#000"
            android:layout_marginTop="20dp"
            android:textSize="18dp"
            android:layout_marginLeft="40dp"
            android:id="@+id/textView3" />

        <TextView
            android:text="Length of Filament(in mm)"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000"
            android:layout_below="@id/textView3"
            android:layout_marginTop="25dp"
            android:textSize="20dp"
            android:id="@+id/textView5" />

        <EditText
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:textSize="18dp"
            android:textColor="#000"
            android:layout_marginLeft="9dp"
            android:hint="10"
            android:id="@+id/editText2"
            android:layout_toRightOf="@id/textView5"
            android:layout_marginTop="20dp"
            android:layout_below="@+id/textView3" />


        <Button
            android:text="Calculate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:id="@+id/button"
            android:layout_below="@+id/editText2"
            android:layout_centerHorizontal="true"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text=""
            android:hint="Cost in Rs"
            android:textSize="20dp"
            android:layout_marginTop="20dp"
            android:layout_toRightOf="@id/textView9"
            android:layout_marginLeft="20dp"
            android:textColor="#000"
            android:id="@+id/editText4"
            android:layout_below="@+id/button"/>

        <TextView
            android:text=""
            android:hint="Weight in gm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:textColor="#000"
            android:id="@+id/textView6"
            android:layout_below="@+id/textView9"
            android:layout_toRightOf="@id/textView10"
            android:layout_marginTop="20dp" />

        <TextView
            android:text="COST :"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_marginLeft="40dp"
            android:textColor="#000"
            android:id="@+id/textView9"
            android:layout_marginTop="20dp"
            android:layout_below="@id/button" />

        <TextView
            android:text="WEIGHT :"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="#000"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="20dp"
            android:textStyle="bold"
            android:id="@+id/textView10"
            android:layout_below="@id/textView9"/>

        <TextView
            android:text="NOTE: Printing cost Rs.10/gm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="#000"
            android:id="@+id/textView7"
            android:layout_below="@id/textView10"
            android:layout_marginTop="30dp"
            android:layout_centerHorizontal="true" />


    </RelativeLayout>

</ScrollView>